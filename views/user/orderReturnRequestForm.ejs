
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Return Request Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            background: #fff;
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            margin: 20px auto;
        }

        .error-container {
            color: #dc3545;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #dc3545;
            border-radius: 5px;
            display: none;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        .section {
            margin-bottom: 25px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .section h2 {
            color: #495057;
            margin-top: 0;
            margin-bottom: 15px;
            font-size: 1.2em;
        }

        .info-item {
            margin: 8px 0;
            color: #666;
        }

        .info-label {
            font-weight: bold;
            color: #495057;
        }

        .product-item {
            display: flex;
            align-items: center;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .product-details {
            flex-grow: 1;
            margin-left: 10px;
        }

        .quantity-input {
            width: 60px;
            padding: 5px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            margin-left: 10px;
        }

        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            min-height: 100px;
            margin-top: 10px;
        }

        .submit-btn {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 5px;
            width: 100%;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .submit-btn:hover {
            background-color: #218838;
        }

        .submit-btn:disabled {
            background-color: #6c757d;
            cursor: not-allowed;
        }

        @media (max-width: 600px) {
            .container {
                padding: 15px;
            }

            .product-item {
                flex-direction: column;
                align-items: stretch;
            }

            .quantity-input {
                margin-top: 10px;
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Return Request Form</h1>
        
        <div class="error-container" id="errorContainer"></div>

        <form id="returnForm">
            <input type="hidden" name="orderId" value="<%= order._id %>">
            <input type="hidden" name="userId" value="<%= user._id %>">

            <div class="section">
                <h2>User Information</h2>
                <div class="info-item">
                    <span class="info-label">Name:</span> <%= user.name %>
                </div>
                <div class="info-item">
                    <span class="info-label">Email:</span> <%= user.email %>
                </div>
            </div>

            <div class="section">
                <h2>Order Information</h2>
                <div class="info-item">
                    <span class="info-label">Order ID:</span> <%= order._id %>
                </div>
                <div class="info-item">
                    <span class="info-label">Order Date:</span> <%= new Date(order.date).toLocaleDateString() %>
                </div>
            </div>

            <div class="section">
                <h2>Select Products to Return</h2>
                <% products.forEach(product => { %>
                    <div class="product-item">
                        <input type="checkbox" 
                               name="productIds" 
                               value="<%= product._id %>" 
                               id="product-<%= product._id %>" 
                               class="product-checkbox">
                        <div class="product-details">
                            <label for="product-<%= product._id %>">
                                <%= product.name %> - â‚¹<%= product.price %>
                            </label>
                            <input type="number" 
                                   name="quantity-<%= product._id %>" 
                                   min="1" 
                                   max="<%= product.quantity %>" 
                                   class="quantity-input" 
                                   disabled 
                                   required>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div class="section">
                <h2>Reason for Return</h2>
                <textarea name="reason" 
                          placeholder="Please provide detailed reason for return" 
                          required></textarea>
            </div>

            <button type="submit" class="submit-btn">Submit Return Request</button>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('returnForm');
            const errorContainer = document.getElementById('errorContainer');
            const checkboxes = document.querySelectorAll('.product-checkbox');
            
            // Handle checkbox changes
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', e => {
                    const quantityInput = document.querySelector(`input[name="quantity-${checkbox.value}"]`);
                    quantityInput.disabled = !checkbox.checked;
                    if (!checkbox.checked) {
                        quantityInput.value = '';
                    } else {
                        quantityInput.value = '1';
                    }
                });
            });

            // Form submission
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                errorContainer.style.display = 'none';

                try {
                    const formData = new FormData(form);
                    const data = {
                        userId: formData.get('userId'),
                        orderId: formData.get('orderId'),
                        reason: formData.get('reason'),
                        products: []
                    };

                    // Collect selected products
                    const productIds = formData.getAll('productIds');
                    productIds.forEach(productId => {
                        const quantity = formData.get(`quantity-${productId}`);
                        if (quantity) {
                            data.products.push({
                                productId,
                                quantity: parseInt(quantity)
                            });
                        }
                    });

                    if (data.products.length === 0) {
                        throw new Error('Please select at least one product to return');
                    }

                    const response = await fetch('/raiseReturnRequest', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();
                    
                    if (response.ok) {
                        alert('Return request submitted successfully');
                        window.location.href = `/orderDetails?id=${data.orderId}`;
                    } else {
                        throw new Error(result.message || 'Failed to submit return request');
                    }
                } catch (error) {
                    errorContainer.textContent = error.message;
                    errorContainer.style.display = 'block';
                    console.error('Error:', error);
                }
            });
        });
    </script>
</body>
</html>
