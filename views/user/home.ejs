   /* Container for the entire section */
#category-section {
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Flexbox for category block */
.category-block {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

/* Category button styling */
.category-button {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
    width: 150px;
    cursor: pointer;
    transition: box-shadow 0.3s ease;
}

.category-button:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* Category image styling */
.category-img {
    width: 80px;
    height: 80px;
    margin-bottom: 10px;
    object-fit: cover;
    border-radius: 50%;
}

/* Category text styling */
.category-text {
    font-size: 16px;
    font-weight: 600;
    color: #333;
}

/* Subcategory dropdown styling */
.subcategory-dropdown {
    display: none;
    margin-top: 10px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    position: absolute;
    z-index: 1;
}

/* Subcategory item styling */
.subcategory-item {
    display: block;
    padding: 5px 10px;
    color: #333;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.subcategory-item:hover {
    background-color: #f0f0f0;
}

/* No subcategories available text */
.no-subcategories {
    padding: 5px 10px;
    color: #999;
    font-style: italic;
}
 
</style>

