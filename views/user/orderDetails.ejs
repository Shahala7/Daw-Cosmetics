<%- include("../partials/header") %>

    <style>
        .custom-btn {
            /* Add your custom styles here */
            background-color: #4CAF50;
            /* Green */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
